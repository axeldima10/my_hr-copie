{% extends 'base.html.twig' %}


{% block content_for_layout %}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="row"> 
         <div class="col-md-3"> 
            {% include "apply/_filter.html.twig" %}

        </div> 

        <div class="col-md-9">
              <!-- DataTales Example -->
   
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nom (s) </th>
                            <th>Prenom (s) </th>
                            <th>Reference du poste</th>
                            <th> Statut de la candidature</th>
                            <th>Fichiers</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                   
                    <tbody>
                        {% for apply in applies %}

                        <tr>
                            
                            <td> {{apply.jobSeeker.LastName}} </td>
                            <td> {{apply.jobSeeker.FirstName}} </td>
                            <td> {{apply.reference}} </td>
                            <td> {{apply.state.label}} </td>
                            {% if apply.documents is empty %}
                                <td></td>
                           {% else %}
                            <td><a href="{{asset('files/document')}} {{apply.documents[0].filename}}"> View PDF </a> </td>
                            {% endif %}
                           
                            
                            <td>
                                <a name="" id="" class="btn btn-info btn-xs" href="{{ path('app_apply_edit', {'id': apply.id}) }}" role="button">View Apply</a>
                            </td> 
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="3">no applies found</td>
                        </tr>
                            
                        {% endfor %}
                      
                    </tbody>
                </table>
            </div>
        </div>
    </div>



        </div>
    </div>

    
  
</div>
<!-- /.container-fluid -->
                        
{% endblock content_for_layout %}